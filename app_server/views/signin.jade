block content
html(style='background-color: #108a93')
  .container
    .row
      .col-md-8.col-md-offset-2
        .panel.panel-primary
          .panel-heading
            h1.text-center(style='font-size: 40px;') Sign In
          .panel-body
            form.form-horizontal(role='form', action='/signin', method='post')
              .form-group
                label.col-sm-3.control-label(for='username', style='font-size: 20px;') Username:
                .col-sm-9
                  input.form-control.input-lg(type='text', id='username', name='username', placeholder='Enter your username', style='font-size: 30px;', required)
              .form-group
                label.col-sm-3.control-label(for='password', style='font-size: 20px;') Password:
                .col-sm-9
                  input.form-control.input-lg(type='password', id='password', name='password', placeholder='Enter your password', style='font-size: 30px;', required)
              .form-group
                .col-sm-offset-3.col-sm-9
                  button.btn.btn-primary.btn-lg.btn-block(type='submit', style='font-size: 20px;') Sign In
                  &nbsp;
                  a.btn.btn-default(role='button', href='/') Cancel
              .form-group
                .col-sm-9.col-sm-offset-3
                  a(href='#', style='font-size: 20px;') Forgot Password?
              .form-group
                .col-sm-offset-3.col-sm-9
                  p(style='font-size: 30px; color: #000000;') Don't have an account? 
                  a.btn.btn-link(href='/register', style='font-size: 20px;') Create an Account
